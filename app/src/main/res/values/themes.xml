<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_900</item>
        <item name="colorPrimaryDark">@color/navy_900</item>
        <item name="colorAccent">@color/navy_900</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GithubUser.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Theme.GithubUser.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GithubUser.SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabSettings" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Theme.GithubUser.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>